{
  "Kestrel": {
    "EndPoints": {
      "Http": {
        "Url": "http://+:8085"
      }
    }
  },
  "AllowedHosts": "*",
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.Hosting.Lifetime": "Information"
    },
    "Console": {
      "LogLevel": {
        "Default": "Information",
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      },
      "FormatterName": "json",
      "FormatterOptions": {
        "SingleLine": true,
        "IncludeScopes": true,
        "TimestampFormat": "MM/dd/yyy HH:mm:ss ",
        "UseUtcTimestamp": false
      }
    }
  },
  "Mqtt": {
    "Broker": "mqtt.server.org",
    "Port": 1883,
    "RootTopic": "mytopic/hamradio/wsjtx",
    "ClientId": "wsjtx-service",
    "Enabled": true
  },
  
  "DxMaps": {
    "Host": "server.dxmaps.com",
    "Port": 7350,
    "Enabled": true,
    "SendSpot": true
  },
  
  "Wsjtx": {
    "Listeners": [
      {
        "Ip": "224.0.0.1",
        "Port": 2237,
        "Multicast": true
      },
      {
        "Ip": "224.0.0.1",
        "Port": 2238,
        "Multicast": true
      },
      {
        "Ip": "224.0.0.1",
        "Port": 2239,
        "Multicast": true
      }
    ]
  },
  "FlexSpot": {
    "RadioId": "0000-0000-0000-0000",
    "Host": "myhost.org",
    "SpotterCall": "MYCALL",
    "Enabled": true
  }
}
